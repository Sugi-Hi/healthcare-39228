<div class="care__inner">
  <h1 class="form__text"> 健康診断回答からのケア対策・選定 </h1>

    <%= image_tag "nature.JPG" , class: "care__image" %>

  <%= form_with model: @care , class: "care__wrapper"  , local: true do |f| %>
    <div class="care_field" >
      <div class="care_title">
        <%= f.label :care_date, "対策予定日" %><br>
        <%= raw sprintf( f.date_select(
                          :care_date,
                          class: "care_select",
                          use_month_numbers: true,
                          prompt:'--',
                          start_year: 2023,
                          end_year: (Time.now.year + 5 ),
                          date_separator: '%s'),
                        "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
      </div> 
      <div class="care_title">
        <%= f.label :care_time, "予定時間帯(開始時間)" %><br>
        <%= f.datetime_select :care_time  %>
      </div>
      <div class="care_title">
        <%= f.label :care_place, "可能な場所" %><br>
        <%= f.text_field :go_by  %>
      </div>           
      <div class="care_title">
        <%= f.label :go_by, "探し方・移動手段" %><br>
        <%= f.text_field :go_by  %>
      </div>
      <div class="care_title">
        <%= f.label :care_method, "提案ケア・アクティブからの選定" %><br>
        <%= f.collection_select(:care_method , Caremethod.all, :id , :name , {}, {class: "care_select"} ) %>
      </div>

       <div class="actions">
          <%= f.submit "対策を決定しておく", class: :form__btn  %>
        </div><br>

    </div>
  <% end %>
</div>
